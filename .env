LEAPFOR_DATABASE_FIRESTORE_COLLECTION_CLIENT=tph_client_v2
LEAPFOR_DATABASE_FIRESTORE_COLLECTION_USER=tph_user_v2
LEAPFOR_DATABASE_FIRESTORE_COLLECTION_ATTRIBUTE=tph_attribute_v2
LEAPFOR_DATABASE_FIRESTORE_COLLECTION_SUBSCRIPTION_ATTRIBUTE=tph_subscription_attribute_v2
LEAPFOR_DATABASE_FIRESTORE_COLLECTION_PAYMENT_ATTRIBUTE=tph_payment_attribute_v2

# Workflow Collections (for seeder)
LEAPFOR_DATABASE_FIRESTORE_COLLECTION_WORKFLOW_TEMPLATE=workflow_template_v1
LEAPFOR_DATABASE_FIRESTORE_COLLECTION_STAGE_TEMPLATE=stage_template_v1
